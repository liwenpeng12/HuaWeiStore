<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/tab_textsize_15sp</item>
    </style>

    <style name="nodata_bluebuttonbottom">
        <item name="android:textSize">@dimen/res_textsize_15sp</item>
        <item name="android:textColor">@color/blue_text_007dff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/no_wifi_setting_button</item>
    </style>

    <style name="download_button">
        <item name="android:textSize">@dimen/res_textsize_12dp</item>
        <item name="android:textColor">@color/white_text_7c7c7c</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
